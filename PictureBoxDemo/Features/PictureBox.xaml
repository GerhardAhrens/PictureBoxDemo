<UserControl
    x:Class="PictureBoxDemo.PictureBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PictureBoxDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="400"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <UserControl.Resources>
        <local:ByteArrayToImageConverter x:Key="ByteArrayToImageConverter" />

    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Buttons  -->
        <StackPanel Grid.Column="0">

            <Button
                x:Name="BtnMoveUp"
                Content="▲"
                Tag="Up" />
            <Button
                x:Name="BtnMoveDown"
                Content="▼"
                Tag="Down" />
            <Button
                x:Name="BtnDelete"
                Content="🗑"
                Tag="Delete" />
            <Button
                x:Name="BtnPaste"
                Content="📋+"
                Tag="Paste" />
            <Button
                x:Name="BtnCopy"
                Content="📋"
                Tag="Copy" />

        </StackPanel>

        <!--  Image  -->
        <Border
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            BorderBrush="Gray"
            BorderThickness="1">
            <Image
                x:Name="pictureBox"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Source="{Binding SelectedPicture, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource ByteArrayToImageConverter}}"
                Stretch="Uniform"
                StretchDirection="Both" />
        </Border>

    </Grid>
</UserControl>
